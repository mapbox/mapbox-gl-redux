{
  "name": "@mapbox/mapbox-gl-redux",
  "version": "0.1.0",
  "description": "Tools for building Redux applications with Mapbox GL JS",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "test": "npm run lint && jest",
    "lint": "eslint src test.js",
    "prepublishOnly": "npm run build",
    "build": "rm -rf dist && babel src -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapbox/mapbox-gl-redux.git"
  },
  "author": "Mapbox",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/mapbox/mapbox-gl-redux/issues"
  },
  "babel": {
    "presets": [
      "stage-0",
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "homepage": "https://github.com/mapbox/mapbox-gl-redux#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.0.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.6.1",
    "eventemitter3": "^2.0.3",
    "husky": "^0.14.3",
    "jest-cli": "^21.1.0",
    "lint-staged": "^4.1.3",
    "prettier": "^1.7.0"
  }
}
